<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ru.sample2.shared.AddressEntity" table="address" schema="public" catalog="postgres">
        <id name="id">
            <column name="id" sql-type="integer"/>
        </id>
        <property name="city">
            <column name="city" sql-type="char(50)" length="50"/>
        </property>
        <property name="street">
            <column name="street" sql-type="char(50)" length="50"/>
        </property>
        <property name="numberhome">
            <column name="numberhome" sql-type="integer"/>
        </property>
    </class>
</hibernate-mapping>